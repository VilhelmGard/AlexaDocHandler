<table style="width:300px" class="table table-bordered table-responsive table-hover">
    <tr>
        <th> ID </th>
        <th> Documents in SharePoint: </th>
    </tr>
    <tbody>
        @foreach (AlexaSkillsKitWebApi2.Models.Document objItem in Model)
        {
            <tr class="item_row">
                <td><b>@objItem.Id</b></td>
                <td> @objItem.Name</td>
            </tr>
        }
    </tbody>
</table>

